resources:
  cloud: gcp
  instance_type: {{instance}}
  region: {{region}}

setup: |
  conda config --add channels defaults
  conda config --add channels bioconda
  conda config --add channels conda-forge
  conda install -y mamba -n base -c conda-forge
  sleep 3
  which mamba
  mamba install -y anndata pandas pybedtools pyBigWig pysam seaborn xarray htslib dask zarr
  pip install git+https://github.com/lhqing/ALLCools.git
  pip install git+https://github.com/lhqing/gliderport.git

file_mounts:
  /input:
    source: gs://{{ input_bucket }}/
    mode: MOUNT

